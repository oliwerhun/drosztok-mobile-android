{
  "expo": {
    "name": "Elitdroszt",
    "slug": "elitdroszt",
    "version": "1.5.3",
    "versionCode": 17,
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.oliwerhun.elitdroszt",
      "infoPlist": {
        "UIBackgroundModes": [
          "location",
          "fetch",
          "remote-notification"
        ],
        "NSLocationWhenInUseUsageDescription": "Az alkalmazásnak szüksége van a helyzetére a drosztok eléréséhez és a sorbaálláshoz.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Az alkalmazás a háttérben is figyeli, hogy Ön a droszton tartózkodik-e, így elkerülhető a véletlen kiléptetés.",
        "NSLocationAlwaysUsageDescription": "A folyamatos helymeghatározás biztosítja a droszt-rendszer pontos működését a háttérben is."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "hu.elitdroszt.mobile",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION",
        "WAKE_LOCK",
        "RECEIVE_BOOT_COMPLETED",
        "SCHEDULE_EXACT_ALARM"
      ]
    },
    "plugins": [
      [
        "expo-location",
        {
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      "expo-notifications",
      "expo-font"
    ],
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}